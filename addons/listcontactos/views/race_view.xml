<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista formulario para Race -->

    <record model = "ir.ui.view" id = "race_form_view">
            <field name="name">race.form.view</field>
            <field name="model">catalog.race</field>
            <field name="arch" type="xml">
                <form string="Race">
                    <header>
                        <button name="action_change_state_race" string="Change to review"
                                class="oe_highlight" states="draft" type="object"
                                context="{'state': 'review'}"
                                groups="listcontactos.group_agent"
                        />
                        <button name="action_change_state_race" string="Change to completed"
                                class="oe_highlight" states="review" type="object"
                                context="{'state': 'completed'}"
                                groups="listcontactos.group_admin"
                        />
                        <field name="state" widget="statusbar" statusbar_visible="draft,review,completed" />
                    </header>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="description" />
                        </group>
                    </sheet>
                </form>
            </field>
    </record>

    <!-- Vista Arbol (Tree) para Race -->

    <record model = "ir.ui.view" id = "race_tree_view">
            <field name="name">race.tree.view</field>
            <field name="model">catalog.race</field>
            <field name="arch" type="xml">
                <tree string="Race">
                    <field name="name" />
                    <field name="description" />
                </tree>
            </field>
    </record>



</odoo>