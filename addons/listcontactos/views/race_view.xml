<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista formulario para Race -->

    <record model = "ir.ui.view" id = "race_form_view">
            <field name="name">race.form.view</field>
            <field name="model">catalog.race</field>
            <field name="arch" type="xml">
                <form string="Race">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="description" />
                        </group>
                    </sheet>
                </form>
            </field>
    </record>

    <!-- Vista Arbol (Tree) para Race -->

    <record model = "ir.ui.view" id = "race_tree_view">
            <field name="name">race.tree.view</field>
            <field name="model">catalog.race</field>
            <field name="arch" type="xml">
                <tree string="Race">
                    <field name="name" />
                    <field name="description" />
                </tree>
            </field>
    </record>



</odoo>